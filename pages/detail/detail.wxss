/* pages/detail/detail.wxss */
.detail_container{
  display: flex;
  flex-direction: column
}
.headerImg{
  width: 100%;
  height: 460rpx;
}
.avater_date{
  margin: 10rpx;
}
.avater_date image{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.avater_date text{
  font-size: 28rpx;
  margin-left: 10rpx;
}
.company {
	margin-left: 10rpx;
	font-size: 36rpx;
	font-weight: 700;
	margin: 10rpx;
}
.collection_share_container{
  position: relative;
  height: 80rpx;
}
.collection_share{
  float: right;
  margin-right: 80rpx;
}
.collection_share image{
  width: 80rpx;
  height: 80rpx;
  margin-left: 10rpx;
}
.line{
  position: absolute;
  width: 90%;
  height: 1rpx;
  background: #eee;
  margin-top: 45rpx;
  margin-left: 5%;
  z-index: -1;
}
.transpond{
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
}
.content{
  margin: 10rpx;
  font-size: 32rpx;
  text-indent: 32rpx;
}

.musicImg {
	width: 60rpx;
	height: 60rpx;
	position: absolute;
	top: 200rpx;
	left: 50%;
	margin-left: -30rpx;
}